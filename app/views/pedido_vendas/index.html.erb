<%= render 'sidebar', cache: true%> 

<div class="col-sm-9">
<div class="box box-success">
<div class="box-header">
  <h3 class="box-title">Pedido de Vendas</h3>
</div>
<div class="box-body">
<table  class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Cliente</th>
      <th>Data de solicitação</th>
        <th>Vendedor</th>
        <th>Total</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pedido_vendas.each do |pedido_venda| %>
      <tr>
        <td><%= link_to pedido_venda.id , edit_pedido_venda_path(pedido_venda) %></td>
        <td><%= pedido_venda.cliente.nome_fantasia %></td>
        <td><%= pedido_venda.user.name if pedido_venda.user %></td>
        <td><%= pedido_venda.data_solicitacao %></td>
          <td>
            <%if pedido_venda.pedido_venda_status_id == 2 %>
                <span class="label label-danger"><%= pedido_venda.pedido_venda_status.name if pedido_venda.pedido_venda_status%></span>
            <%else%>
                <span class="label label-success"><%= pedido_venda.pedido_venda_status.name if pedido_venda.pedido_venda_status%></span>
            <%end%>
          </td>
      <td><%= link_to 'Deletar', pedido_venda, method: :delete, data: { confirm: 'Deseja deletar o pedido de venda?' } %></td>


      </tr>
    <% end %>
  </tbody>
</table>
</div><!-- /.box-body -->
</div>
</div>