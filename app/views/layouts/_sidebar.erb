<div class="col-md-3 sidebar-filter">
    <div class="margin-bottom">
<%= link_to 'Adicionar', new_layout_path, :class => 'btn btn-block btn-success btn-flat margin-bottom' %>
  </div>

<%= form_tag layouts_path, :id => "filter_form", :class => "filter_form", :method => 'get' do %>   
    
  <div class="box box-solid">
    <div class="box-header with-border">
      <h3 class="box-title">Cliente</h3>
    </div>
    <div class="box-body">
        <div class="col-md-12 margin-bottom">    
                        
    <%= text_field_tag :cliente_name, params[:cliente_name], :class => 'form-control  input-sm', :placeholder => "Buscar por cliente" %> 
      <span class="glyphicon glyphicon-search form-control-feedback"></span>
            
</div>
    </div><!-- /.box-body -->
  </div><!-- /. box -->
  
    
  <div class="box box-solid">
    <div class="box-header with-border">
      <h3 class="box-title">Data de Aprovação</h3>
    </div>
    <div class="box-body">
        <div class="col-md-12 margin-bottom">    
                        
             <div class="search_with_date">
            <%= text_field_tag :aprovacao_start_date, params[:aprovacao_start_date],   :class => 'form-control  datepicker input-sm date_time', :placeholder =>'De'  %>  
            <span>-</span>
        <%= text_field_tag :aprovacao_end_date, params[:aprovacao_end_date],   :class => 'form-control datepicker  input-sm date_time',:placeholder =>'Até' %> 
        </div>
            
</div>
    </div><!-- /.box-body -->
  </div><!-- /. box -->
    

    
  <div class="box box-solid">
    <div class="box-header with-border">
      <h3 class="box-title">Status</h3>
    </div>
    <div class="box-body  sidebar-scroll">
        <ul class="nav nav-pills nav-stacked">
            <% @status.each do |status| %>
             <li>
                <a href='#' onclick="SubmitFilter();return false;">              
                    <%= check_box_tag "status[]", status.id %>
                    <%= status.name %>
                 </a>
            </li>
            <% end %>

      </ul>

    </div><!-- /.box-body -->
  </div><!-- /. box -->

    
<% end %>  
</div> 
