<p id="notice"><%= notice %></p>

<%= render 'sidebar', cache: true%> 

<div class="col-sm-9">
<div class="box box-success">
<div class="box-header">
  <h3 class="box-title">Layouts</h3>
</div>
<div class="box-body">
<table  class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Cliente</th>
      <th>Data de aprovação</th>
        <th>Layout</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody>
    <% @layouts.each do |layout| %>
      <tr>
        <td><%= link_to layout.cliente.nome_fantasia, edit_layout_path(layout) %></td>
        <td><%= l(layout.data_aprovacao) if layout.data_aprovacao %></td>
          <td><%= layout.name %></td>
          <td>
            <%if layout.pedido_layout_status == 2 %>
            <span class="label label-danger"><%= layout.pedido_layout_status.name if layout.pedido_layout_status %></span>
        <%else%>
            <span class="label label-success"><%= layout.pedido_layout_status.name if layout.pedido_layout_status %></span>
        <%end%>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div><!-- /.box-body -->
</div>
</div>