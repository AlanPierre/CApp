<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      Não foi possível salvar, há <%= pluralize(object.errors.count, "erro") %>  no formulário.
    </div>
  </div>
<% else %>
<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <div class="alert alert-success alert-dismissable-<%= name == :notice ? "success" : "error" %>">
      <a class="close" data-dismiss="alert">&#215;</a>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
    </div>
  <% end %>
<% end %>

<% end %>


