
<body class="login-page">

    <div class="login-box">
      <div class="login-logo">
        <a href="#">CApp</a>
      </div><!-- /.login-logo -->
      <div class="login-box-body">
        <p class="login-box-msg">Login</p>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group has-feedback">
        <%= f.email_field :email, autofocus: true , class:"form-control", type:"email", placeholder:"E-mail"%>
          </div>
          <div class="form-group has-feedback">
              <%= f.password_field :password, class:"form-control", autocomplete: "off", placeholder:"Senha" %>
          </div>
          <div class="row">
            <div class="col-xs-8">    
            <% if devise_mapping.rememberable? -%>
            <%= f.check_box :remember_me %>
            <%= f.label :Manter_conectado %>
            <% end -%>                        
            </div><!-- /.col -->
            <div class="col-xs-4">
            <%= f.submit "Login", class:" btn btn-success btn-block" %>
            </div><!-- /.col -->
          </div>
    <% end %>

      <%= render "devise/shared/links" %>

      </div><!-- /.login-box-body -->

    </div><!-- /.login-box -->


</body>
                    
                    
                   