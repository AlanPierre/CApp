<%= render 'sidebar', cache: true%> 
<div class="col-sm-9">
<div class="box box-success">
<div class="box-header">
  <h3 class="box-title">Ordens de Produção</h3>
</div>
<div class="box-body">
<table  class="table table-bordered table-hover">
  <thead>
    <tr>
        <th>Cód.</th>
      <th>Cliente</th>
        <th>Tipo</th>
      <th>Solicitada em</th>
      <th>Entrega prevista em</th>
    <th>Status</th>
    </tr>
  </thead>

  <tbody>
    <% @ordem_producaos.each do |ordem_producao| %>
      <tr>
      <td><%= link_to ordem_producao.id, edit_ordem_producao_path(ordem_producao) %></td>
        <td><%= ordem_producao.cliente.nome_fantasia if ordem_producao.cliente %></td>
        <td><%= ordem_producao.tipo %></td>
        <td><%= ordem_producao.data_solicitacao %></td>
        <td><%= ordem_producao.data_entrega_previsao %></td>
        <td><%= ordem_producao.ordem_producao_status_id %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div><!-- /.box-body -->
</div>
</div>
