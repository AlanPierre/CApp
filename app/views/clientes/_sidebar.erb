<div class="col-md-3">
    <div class="margin-bottom">
<%= link_to 'Adicionar', new_cliente_path, :class => 'btn btn-block btn-success btn-flat' %>
  </div>
<%= form_tag clientes_path, :id => "filter_form", :class => "filter_form", :method => 'get' do %>   
    
   <div class="box box-solid">
    <div class="box-header with-border">
      <h3 class="box-title">Cliente</h3>
    </div>
    <div class="box-body">
        <div class="col-md-12 margin-bottom">                    
    <%= text_field_tag :search_with, params[:search_with], :class => 'form-control  input-sm', :placeholder => "Buscar por cliente" %> 
      <span class="glyphicon glyphicon-search form-control-feedback"></span>   
        </div>
    </div><!-- /.box-body -->
  </div><!-- /. box -->
    
  <div class="box box-solid">
    <div class="box-header with-border">
      <h3 class="box-title">Status</h3>
    </div>
    <div class="box-body no-padding sidebar-scroll">
        <ul class="nav nav-pills nav-stacked">
            <% @status.each do |status| %>
             <li>
                <a href='#' onclick="SubmitFilter();return false;">              
                    <%= check_box_tag "status[]", status.id %>
                    <%= status.name %>
                 </a>
            </li>
            <% end %>
      </ul>
    </div><!-- /.box-body -->
  </div><!-- /. box -->
      
  <div class="box box-solid">
    <div class="box-header with-border">
      <h3 class="box-title">Vendedores</h3>
    </div>
    <div class="box-body no-padding sidebar-scroll">
      <form class="filter_form", method="get">
        <ul class="nav nav-pills nav-stacked">
            <% @vendedores.each do |vendedor| %>
             <li>
                <a href='#' onclick="SubmitFilter();return false;">
                    <%= check_box_tag("vendedor[]", vendedor.id) %>
                <%= vendedor.name %> </a>
            </li>
            <% end %>
      </ul>
    </div><!-- /.box-body -->
  </div><!-- /. box -->
  <div class="box box-solid">
    <div class="box-header with-border">
      <h3 class="box-title">Ramo de Mercado</h3>
    </div>
    <div class="box-body no-padding sidebar-scroll">
      <form class="filter_form", method="get">
        <ul class="nav nav-pills nav-stacked">
            <% @ramos.each do |ramo| %>
             <li>
                <a href='#' onclick="SubmitFilter();return false;">
                <%= check_box_tag("ramo[]", ramo.id) %>
                <%= ramo.name %> </a>
            </li>
            <% end %>
      </ul>
    </div><!-- /.box-body -->
  </div><!-- /. box -->
<% end %>

    
</div>