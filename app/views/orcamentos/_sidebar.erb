<div class="col-md-3">
    <div class="col-md-12 margin-bottom">
<%= link_to 'Adicionar', new_orcamento_path, :class => 'btn btn-block btn-success btn-flat margin-bottom' %>
  </div>
    
<div class="col-md-12 margin-bottom">
<%= form_tag orcamentos_path, :id => "search", :method => 'get' do %>   
    <%= text_field_tag :search_with, params[:search_with], :class => 'form-control  input-sm', :placeholder => "Buscar por ID" %> 
      <span class="glyphicon glyphicon-search form-control-feedback"></span>
<% end %>  
  </div>   
                
    
<%= form_tag orcamentos_path, :id => "filter_form", :class => "filter_form", :method => 'get' do %>   

  <div class="col-md-12">    
  <div class="box box-solid">
    <div class="box-header with-border">
      <h3 class="box-title">Status</h3>
    </div>
    <div class="box-body no-padding sidebar-scroll">
        <ul class="nav nav-pills nav-stacked">
            <% @status.each do |status| %>
             <li>
                <a href='#' onclick="SubmitFilter();return false;">              
                    <%= check_box_tag "status[]", status.id %>
                    <%= status.name %>
                 </a>
            </li>
            <% end %>

      </ul>

    </div><!-- /.box-body -->
  </div><!-- /. box -->
</div>

      
  <div class="col-md-12">    
  <div class="box box-solid">
    <div class="box-header with-border">
      <h3 class="box-title">Vendedores</h3>
    </div>
    <div class="box-body no-padding sidebar-scroll">
      <form class="filter_form", method="get">
        <ul class="nav nav-pills nav-stacked">
            <% @vendedores.each do |vendedor| %>
             <li>
                <a href='#' onclick="SubmitFilter();return false;">
                    <%= check_box_tag("vendedor[]", vendedor.id) %>
                <%= vendedor.name %> </a>
            </li>
            <% end %>
      </ul>
    </div><!-- /.box-body -->
  </div><!-- /. box -->
</div> 
    
  <div class="col-md-12">    
  <div class="box box-solid">
    <div class="box-header with-border">
      <h3 class="box-title">Clientes</h3>
    </div>
    <div class="box-body no-padding sidebar-scroll">
      <form class="filter_form", method="get">
        <ul class="nav nav-pills nav-stacked">
            <% @clientes.each do |cliente| %>
             <li>
                <a href='#' onclick="SubmitFilter();return false;">
                    <%= check_box_tag("cliente[]", cliente.id) %>
                <%= cliente.nome_fantasia %> </a>
            </li>
            <% end %>
      </ul>
    </div><!-- /.box-body -->
  </div><!-- /. box -->
</div>       
    
<% end %>  
</div> 
